<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="ContentDescription,NestedWeights" >

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/fab_separator" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/fab_background"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/fabb_drawing_mode"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ic_action_foreground"
            android:gravity="center"
            android:text="@string/fabb_drawing_mode"
            android:textColor="@color/white" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="0"
            android:background="@color/settings_separator" />

        <TextView
            android:id="@+id/fabb_erasing_mode"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ic_action_foreground"
            android:gravity="center"
            android:text="@string/fabb_erasing_mode"
            android:textColor="@color/white" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="0"
            android:background="@color/settings_separator" />

        <TextView
            android:id="@+id/fabb_erase_all"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ic_action_foreground"
            android:gravity="center"
            android:text="@string/fabb_erase_all"
            android:textColor="@color/white" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="0"
            android:background="@color/settings_separator" />

        <TextView
            android:id="@+id/fabb_save_file"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ic_action_foreground"
            android:gravity="center"
            android:text="@string/fabb_save_file"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>